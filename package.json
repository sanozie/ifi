{
  "name": "ifi",
  "private": true,
  "packageManager": "yarn@4.3.1",
  "workspaces": [
    "services/*",
    "packages/*",
    "apps/*"
  ],
  "engines": {
    "node": ">=20",
    "bun": ">=1.1.0"
  },
  "scripts": {
    "build": "yarn workspaces foreach -A --topological-dev -j 1 run build",
    "dev": "yarn workspace @ifi/api dev",
    "test": "yarn workspaces foreach -A run test",
    "lint": "yarn workspaces foreach -A run lint",
    "typecheck": "yarn workspaces foreach -A run typecheck",
    "prisma:generate": "yarn workspace @ifi/db prisma generate",
    "prisma:migrate:reset": "yarn workspace @ifi/db prisma migrate reset",
    "prisma:migrate:deploy": "yarn workspace @ifi/db prisma migrate deploy",
    "prisma:migrate:dev": "yarn workspace @ifi/db prisma migrate dev",
    "db:push": "yarn workspace @ifi/db prisma db push && bun run packages/db/prisma/seed.ts"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "eslint": "^9.8.0",
    "prettier": "^3.3.3",
    "tsx": "^4.15.7",
    "typescript": "^5.5.4"
  }
}
